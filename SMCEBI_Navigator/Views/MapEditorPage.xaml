<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SMCEBI_Navigator.Views.MapEditorPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:model="clr-namespace:SMCEBI_Navigator"
             xmlns:innerModel="clr-namespace:SMCEBI_Navigator.Models"
             Shell.NavBarIsVisible="True">

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Import JSON" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="10" x:DataType="model:MapConfig">
        <Label Text="Name" />
        <Entry Text="{Binding Building.Name}" />
        
        <!--styleEditorControl-->

        <Label Text="Change version" />
        <Label Text="{Binding Building.Version}" />

        <ImageButton x:Name="SaveMapBtn" 
                     Source="Images/save_fill0_wght400_grad0_opsz24.svg" 
                     Clicked="SaveMapBtn_Clicked" />
    </VerticalStackLayout>
</ContentPage>